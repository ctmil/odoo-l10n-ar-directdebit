<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_banelco_config_settings" model="ir.ui.view">
            <field name="name">banelco.directdebit.communication</field>
            <field name="model">banelco.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure DirectDebit" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>

                    <field name="banelco_company_id"/>
                </form>
            </field>
        </record>

        <record id="action_banelco_config" model="ir.actions.act_window">
            <field name="name">Configure DirectDebit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">banelco.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_banelco_config" name="Invoicing" parent="base.menu_config"
            sequence="14" action="action_banelco_config"/>

    </data>
</openerp>
