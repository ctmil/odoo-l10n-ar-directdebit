<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="directdebit_partner_bank_form_view">
            <field name="name">directdebit.partner.bank.form</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_form"/>
            <field name="arch" type="xml">
              <group name="bank" position="after">
                  <group name="directdebit" string="Direct Debit Configuration">
                    <field name="use_directdebit"/>
                    <field name="directdebit_code" attrs="{'invisible': [('use_directdebit', '=', False)]}"/>
                    <field name="directdebit_username" attrs="{'invisible': [('use_directdebit', '=', False)]}"/>
                    <field name="directdebit_password" password="1" attrs="{'invisible': [('use_directdebit', '=', False)]}"/>
                    <field name="directdebit_request_uri"
                        attrs="{'invisible': [('use_directdebit', '=', False)], 'required': [('use_directdebit','=', True)]}"/>
                    <field name="directdebit_response_uri"
                        attrs="{'invisible': [('use_directdebit', '=', False)], 'required': [('use_directdebit','=', True)]}"/>
                  </group>
              </group>
            </field>
        </record>

    </data>
</openerp>
