<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_directdebit_new_communication_form" model="ir.actions.server">
            <field name="type">ir.actions.server</field>
            <field name="name">Generate Communication from Invoices</field>
            <field name="state">code</field>
            <field name="model_id" ref="model_account_invoice"/>
            <field name="code">action = model.create_communication()</field>
        </record>

        <record model="ir.values" id="action_directdebit_create_communication">
            <field name="model_id" ref="account.model_account_invoice" />
            <field name="name">Generate Communication</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.server,' +str(ref('action_directdebit_new_communication_form'))" />
            <field name="key">action</field>
            <field name="model">account.invoice</field>
        </record>
   
    </data>
</openerp>
